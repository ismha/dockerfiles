version: '3.8'

services:
  postgres:
    image: postgres:17
    container_name: postgres17_dev
    restart: unless-stopped
    env_file:
      - .env
    environment:
      TZ: Europe/Istanbul
      PGTZ: Europe/Istanbul
      POSTGRES_INITDB_ARGS: "--data-checksums"
      PGDATA: /var/lib/postgresql/data/pgdata
    volumes:
      - ./data:/var/lib/postgresql/data
      - ./postgresql.conf:/etc/postgresql/postgresql.conf
    ports:
      - "6543:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER}"]
      interval: 10s
      timeout: 5s
      retries: 5
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
    mem_limit: 16g
    cpus: "4.0"